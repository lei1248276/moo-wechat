<!--index.wxml-->
<NavBar />

<NavTitle currentPage="{{ currentPage }}" />

<swiper
  class="bg-black-2"
  style="height: calc(100vh - 136rpx - 46px - env(safe-area-inset-top))"
  duration="200"
  bind:animationfinish="onSwiper"
>
  <swiper-item skip-hidden-item-layout item-id="home">
    <Home currentPage="{{ currentPage }}" />
  </swiper-item>

  <swiper-item skip-hidden-item-layout item-id="profile">
    <Profile currentPage="{{ currentPage }}" />
  </swiper-item>
</swiper>

<PlayController />

<van-toast id="van-toast" />
