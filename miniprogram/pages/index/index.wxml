<!--index.wxml-->
<view>
	<Navbar currentPage="{{ currentPage }}" />

	<swiper
	 class="bg-black-2"
	 style="height: 100vh"
	 current="{{ 1 }}"
	 duration="200"
	 bind:change="onSwiper"
	>
		<swiper-item skip-hidden-item-layout item-id="play">
			<view style="color: #fff">hello</view>
		</swiper-item>

		<swiper-item skip-hidden-item-layout item-id="home">
			<Home/>
		</swiper-item>

		<swiper-item skip-hidden-item-layout item-id="profile">
			<view style="color: #fff">world</view>
		</swiper-item>
	</swiper>

	<van-toast id="van-toast" />
</view>

