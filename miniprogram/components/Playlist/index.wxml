<view class="playlist flex justify-center item-center" bind:tap="onSong">
  <image src="/assets/record.png" class="playlist__img" />

  <view class="flex-1 flex flex-col">
    <view class="playlist-name text-omit">{{ item.name }}asdasdsadas</view>
    <view class="playlist-singer text-omit">{{ item.singer}}??????????</view>
  </view>

  <view wx:if="{{ run }}" class="sound-wave flex item-end">
    <i wx:for="{{ 4 }}" wx:key="index" class="wave{{ index + 1 }} {{ run ? 'run' : 'paused' }}"></i>
  </view>
  <icon wx:else class="playlist__icon iconfont icon-more" />
</view>
