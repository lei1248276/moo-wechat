{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["miniprogram/*"],
      "@vant/weapp/*": ["node_modules/@vant/weapp/dist/*"]
    },
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "lib": ["ES2020"],
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "miniprogram/miniprogram_npm"
  ]
}
